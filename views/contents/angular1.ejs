<h2>Model View Controller (MVC)</h2>
<a href="https://www.html.it/pag/52626/mv-in-angularjs/">view source</a>

		<script type="text/javascript">
			angular.module("myApp", [])
				.controller("userController",
					function($scope) {
						$scope.utente = { nome: "Mario", cognome: "Rossi"};
						$scope.saluta = function() {
							return "Buongiorno " +
								   $scope.utente.nome + " " +
								   $scope.utente.cognome + "!"
						};
					});
		</script>
  <div ng-app="myApp">

	

	<div ng-controller="userController">
	<p>Nome: <input type="text" ng-model="nome"></p>
	<p>Cognome: <input type="text" ng-model="cognome"></p>
	<p>Hello {{nome}}!</p>
        </div>
</div>


