  <a-scene>

    <a-camera position="2 0 3">
      <a-entity cursor="fuse: true; maxDistance: 30; timeout: 1000">
      </a-entity>
    </a-camera>

    <a-entity id="scene1">
      <a-sky id="pano1" src="/static/photosphere1.jpg" rotation="0 -60 0" radius="5000" color="#fff"></a-sky>
       <a-entity   
            id="box"            
            geometry="primitive: box"
            material="color: blue"
            position="1 2 5"
            rotation="0 45 0"
            onclick="nextScene()"
        ></a-entity>
    </a-entity>

    <a-entity id="scene2" visible="false">
        <a-sky id="pano2" src="/static/photosphere2.jpg" rotation="0 -60 0" radius="5000" color="#fff"></a-sky>
        <a-entity   
            id="box"            
            geometry="primitive: box"
            material="color: blue"
            position="1 2 5"
            rotation="0 45 0"
            onclick="nextScene()"
        ></a-entity>
    </a-entity>

  </a-scene>

  <script type="text/javascript">

  function nextScene() {
    document.getElementById('scene1').setAttribute('visible', 'false')
    document.getElementById('scene2').setAttribute('visible', 'true')
  }
  </script>

